<div class="modify-remove hide">
	<i class="fa-solid fa-x", style="align-self: end; color: white;"></i>
	<%= button_to edit_group_purchase_path(group, purchase), method: :get, class: 'buttons edit' do %>
		<i class="fa-solid fa-pen-to-square"></i>
		EDIT
	<% end %>
	<%= button_to group_purchase_path(group, purchase), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: 'buttons remove' do %>
		<i class="fa-solid fa-trash-can"></i>
		REMOVE
	<% end %>
</div>