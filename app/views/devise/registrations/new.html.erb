<div class="splash-section">
  <div class="login-bar">
    <%= link_to unauthenticated_root_path do %>
      <i class="fa-solid fa-arrow-left", style="font-size: 1.6em;"></i>
    <% end %>
    <h2 class="login-title">REGISTER</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="actions">
        <%= f.submit "Sign up", class: "submit" %>
      </div>
    <% end %>
  </div>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, placeholder: 'Full Name', autofocus: true, required: true, class: 'inputs' %>
    </div>
  
    <div class="field">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, required: true, autocomplete: "email", class: 'inputs' %>
    </div>
  
    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password", required: true, class: 'inputs' %>
    </div>
  
    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: 'Confirm password', autocomplete: "new-password", required: true, class: 'inputs' %>
    </div>
  <% end %>
</div>
