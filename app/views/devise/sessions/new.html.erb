<div class="splash-section">
  <div class="login-bar">
    <%= link_to unauthenticated_root_path do %>
      <i class="fa-solid fa-arrow-left", style="font-size: 1.6em;"></i>
    <% end %>
    <h2 class="login-title">LOGIN</h2>
  </div>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, required: true, autocomplete: "email", class: 'inputs' %>
    </div>
  
    <div class="field">
      <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password", required: true, class: 'inputs' %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "submit" %>
    </div>
  <% end %>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot-password' %><br />
  <% end %>
</div>
