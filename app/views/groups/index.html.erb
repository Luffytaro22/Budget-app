<%= button_to 'Sign out', destroy_user_session_path, method: 'delete' %>
<div class="splash-section">
	<div class="home-bar">
		<i class="fa-solid fa-bars", style="font-size: 1.6em;"></i>
    <h2 class="login-title">CATEGORIES</h2>
    <i class="fa-solid fa-magnifying-glass", style="font-size: 1.6em;"></i>
  </div>
  <div class="div-flex">
		<% @groups.each do |group| %>
			<div class="category">
				<%= link_to group_purchases_path(group) do %>
					<img src=<%= group.icon %>></img>
					<div>
						<%= group.name %>
						<%= group.created_at %>
					</div>
					<%= group.sum_amount %>
				<% end %>
			</div>
		<% end %>
  </div>
  <div class="add-bottom-form">
  	<%= link_to new_group_path, class: 'add-bottom-form-link' do %>
			<i class="fa-solid fa-plus"></i>
			<h3 class="login-title">NEW CATEGORY</h3>
		<% end %>
  </div>
</div>